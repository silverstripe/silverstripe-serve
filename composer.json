{
    "name": "silverstripe/serve",
    "description": "Connects the PHP development server to SilverStripe",
    "license": "MIT",
    "require": {
        "php": "^7 || ^8",
        "symfony/process": "^3",
        "silverstripe/framework": "^4 || ^5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\Serve\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    },
    "bin": [
        "bin/serve"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "phpcs --standard=PSR2 src/ bin/ tests/"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
