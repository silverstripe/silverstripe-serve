{
    "name": "silverstripe/serve",
    "description": "Connects the PHP development server to SilverStripe",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "symfony/process": "^6.1.3",
        "silverstripe/framework": "^5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\Serve\\": "code/"
        }
    },
    "bin": [
        "bin/serve"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "vendor/bin/phpcs --standard=PSR2 code/ bin/ tests/"
    }
}